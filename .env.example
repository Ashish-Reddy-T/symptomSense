GEMINI_API_KEY=yourkey                 # primary LLM + embeddings
OPENROUTER_API_KEY=yuk           # optional fallback

# Retrieval
QDRANT_MODE=disk                          # memory | disk | remote
QDRANT_PATH=./data/qdrant_db              # only if QDRANT_MODE=disk
QDRANT_URL=                               # only if QDRANT_MODE=remote
QDRANT_API_KEY=                           # only if remote
QDRANT_COLLECTION=medical-knowledge

# Parsing
PARSER=docling                            # docling | unstructured

# Vision
VIT_MODEL=backend/app/models/vit-xray-pneumonia
TORCH_DEVICE=cpu                          # cpu | cuda

# STT / TTS
WHISPER_MODEL=small         # tiny | base | small | medium | large
PIPER_VOICE=en_US-amy-medium
PIPER_MODEL_PATH=backend/app/models/piper-en_US-amy-medium/model.onnx

# Gemini models
GEMINI_MODEL=models/gemini-2.5-flash
GEMINI_EMBED_MODEL=gemini-embedding-001
GEMINI_EMBED_DIMENSION=384
LOCAL_EMBED_MODEL=all-MiniLM-L6-v2
OPENROUTER_MODEL=openrouter/mistral-7b-instruct

# Agent thresholds
MIN_IMAGE_CONFIDENCE=0.8
MIN_AVG_LOGPROB=-1.0

# App
APP_HOST=0.0.0.0
APP_PORT=8000
ENV=dev                                   # dev | prod
LOG_LEVEL=INFO
LOG_STRUCTURED=true
FRONTEND_ORIGINS=["*","http://localhost:5173"]